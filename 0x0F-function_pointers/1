#include "3-calc.h"

/**
 * op_add - adds two intengers.
 * @a: The first integer.
 * @b: The second integer.
 *
 * Return: Int.
 */

int op_add(int a, int b)
{
	return (a + b);
}

/**
 * op_sub - subtracts two intengers.
 * @a: The first integer.
 * @b: The second integer.
 *
 * Return: Int.
 */

int op_sub(int a, int b)
{
	return (a - b);
}

/**
 * op_mul - multiplies two intengers.
 * @a: The first integer.
 * @b: The second integer.
 *
 * Return: Int.
 */

int op_mul(int a, int b)
{
	return (a * b);
}

/**
 * op_div - divides two intengers.
 * @a: The first integer.
 * @b: The second integer.
 *
 * Return: Int.
 */

int op_div(int a, int b)
{
	return (a / b);
}

/**
 * op_mod - modulo two intengers.
 * @a: The first integer.
 * @b: The second integer.
 *
 * Return: Int.
 */

int op_mod(int a, int b)
{
	return (a % b);
}
